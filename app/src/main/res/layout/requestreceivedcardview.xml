<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardBackgroundColor="#262">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:id="@+id/requestreceivedcardlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/changecolorcardview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#ff0000"
                app:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/firstlettertextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="A"
                    android:textColor="#ffffff"
                    android:textSize="32dp"
                    android:textStyle="bold"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/requestreceiveduserimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_border_color="#ff0000"
                    app:civ_border_width="2dp"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/requestreceivedusername"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/addfriend"
                android:layout_toStartOf="@+id/addfriend"
                android:text="TEXTVIEW"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/addfriend"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/deleterequest"
                android:layout_toStartOf="@+id/deleterequest"
                android:background="@drawable/ic_add_black_24dp"/>

            <Button
                android:id="@+id/deleterequest"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_alignBaseline="@+id/addfriend"
                android:layout_alignBottom="@+id/addfriend"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_delete_black_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>
